    el.className='card glass g-border rounded-2xl overflow-hidden text-right';
    el.innerHTML=`
      <div class="h-40"><img class="w-full h-full object-cover" src="${c.img}" alt="${c.name}"></div>
      <div class="p-5">
        <h3 class="font-extrabold text-lg text-white mb-1">${c.name}</h3>
        <p class="text-sm text-slate-300 clamp-3">${c.about}</p>
        <div class="mt-3 text-red-300 font-bold text-sm">جزئیات و مشاوره →</div>
      </div>`;
    el.addEventListener('click',()=>openModal(c.name,collegeDetail(c)));
    collegeGrid.appendChild(el);
  });

  function collegeDetail(c){
    return `
      <div class="space-y-5">
        <div class="rounded-2xl overflow-hidden"><img alt="${c.name}" src="${c.img}" class="w-full h-56 object-cover" loading="lazy"></div>
        <p class="text-slate-200">${c.about}</p>
        <div class="glass g-border p-4 rounded-xl">
          <div class="font-bold text-brand mb-2">مزایا</div>
          <ul class="text-sm text-slate-200 space-y-1">
            <li>• دوره‌های مهارت‌محور و بازارکارمحور</li>
            <li>• امکان Co-op و کارآموزی برای رزومه قوی</li>
            <li>• هزینه‌ی کمتر نسبت به بسیاری از برنامه‌های دانشگاهی</li>
          </ul>
        </div>
        <div class="text-center">
          <a href="${wa('سلام، برای انتخاب کالج '+c.name+' راهنمایی می‌خواهم.')}" target="_blank" rel="noopener" class="pill bg-brand-grad text-white hover:opacity-95">🎯 انتخاب بهترین برنامه کالج</a>
        </div>
      </div>`;
  }

  // Modal controls
  const modal=document.getElementById('modal');
  const modalTitle=document.getElementById('modalTitle');
  const modalBody=document.getElementById('modalBody');
  const modalClose=document.getElementById('modalClose');
  function openModal(title,html){modalTitle.textContent=title;modalBody.innerHTML=html;modal.classList.remove('hidden');modal.setAttribute('aria-hidden','false')}
  modalClose.addEventListener('click',()=>{modal.classList.add('hidden');modal.setAttribute('aria-hidden','true')});
  modal.addEventListener('click',(e)=>{if(e.target===modal){modal.classList.add('hidden');modal.setAttribute('aria-hidden','true')}});

  // WhatsApp CTAs
  document.getElementById('ctaWaTop').href=wa();
  document.getElementById('ctaWaHero').href=wa();
  document.getElementById('ctaWaFooter').href=wa();
  document.getElementById('waFloat').href=wa();

  // Contact form -> WhatsApp
  document.getElementById('consultForm').addEventListener('submit',(e)=>{
    e.preventDefault();
    const fd=new FormData(e.target);
    const msg=`سلام، من ${fd.get('name')} هستم.\nایمیل: ${fd.get('email')}\nشماره واتس‌اپ: ${fd.get('whatsapp')}\nعلاقه‌مندی: ${fd.get('intent')}\nپیام: ${fd.get('message')||'-'}`;
    window.open(wa(msg),'_blank','noopener');e.target.reset();alert('درخواست شما ارسال شد؛ در واتس‌اپ پاسخ می‌دهیم.');
  });

  // year
  document.getElementById('year').textContent=new Date().getFullYear();

  // viewport reveal
  const io=new IntersectionObserver((entries)=>{entries.forEach(e=>{if(e.isIntersecting)e.target.classList.add('show')})},{threshold:.08});
  document.querySelectorAll('.fade-up').forEach(el=>io.observe(el));
</script>
</body>
</html>
