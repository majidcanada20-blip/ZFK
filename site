  // Modal controls
  const modal=document.getElementById('modal');
  const modalTitle=document.getElementById('modalTitle');
  const modalBody=document.getElementById('modalBody');
  const modalClose=document.getElementById('modalClose');
  function openModal(title,html){modalTitle.textContent=title;modalBody.innerHTML=html;modal.classList.remove('hidden');modal.setAttribute('aria-hidden','false')}
  modalClose.addEventListener('click',()=>{modal.classList.add('hidden');modal.setAttribute('aria-hidden','true')});
  modal.addEventListener('click',(e)=>{if(e.target===modal){modal.classList.add('hidden');modal.setAttribute('aria-hidden','true')}});

  // WhatsApp CTAs
  document.getElementById('ctaWaTop').href=wa();
  document.getElementById('ctaWaHero').href=wa();
  document.getElementById('ctaWaFooter').href=wa();
  document.getElementById('waFloat').href=wa();

  // Contact form -> WhatsApp
  document.getElementById('consultForm').addEventListener('submit',(e)=>{
    e.preventDefault();
    const fd=new FormData(e.target);
    const msg=`ุณูุงูุ ูู ${fd.get('name')} ูุณุชู.\nุงูู: ${fd.get('email')}\nุดูุงุฑู ูุงุชุณโุงูพ: ${fd.get('whatsapp')}\nุนูุงููโููุฏ: ${fd.get('intent')}\nูพุงู: ${fd.get('message')||'-'}`;
    window.open(wa(msg),'_blank','noopener');e.target.reset();alert('ุฏุฑุฎูุงุณุช ุดูุง ุงุฑุณุงู ุดุฏุ ุฏุฑ ูุงุชุณโุงูพ ูพุงุณุฎ ูโุฏูู.');
  });

  // year
  document.getElementById('year').textContent=new Date().getFullYear();

  // viewport reveal
  const io=new IntersectionObserver((entries)=>{entries.forEach(e=>{if(e.isIntersecting)e.target.classList.add('show')})},{threshold:.08});
  document.querySelectorAll('.fade-up').forEach(el=>io.observe(el));
</script>
