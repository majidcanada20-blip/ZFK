  function provinceDetail(p){
    return `
      <div class="space-y-5">
        <div class="rounded-2xl overflow-hidden">
          <img alt="${p.name}" src="${p.img}" class="w-full h-56 object-cover" loading="lazy">
        </div>
        <p class="text-slate-200">${p.pitch}</p>
        <div class="grid md:grid-cols-2 gap-4">
          <div class="glass g-border p-4 rounded-xl">
            <div class="font-bold text-brand mb-2">چرا ${p.name}؟</div>
            <ul class="text-sm text-slate-200 space-y-1">${p.bullets.map(b=>`<li>• ${b}</li>`).join('')}</ul>
          </div>
          <div class="glass g-border p-4 rounded-xl">
            <div class="font-bold text-brand mb-2">قدم‌های بعدی</div>
            <ol class="text-sm text-slate-200 list-decimal pr-5 space-y-1">
              <li>ارزیابی رایگان رزومه و زبان</li>
              <li>انتخاب مسیر مناسب بر اساس شرایط شما</li>
              <li>چک‌لیست مدارک و آماده‌سازی حرفه‌ای</li>
              <li>ارسال پرونده و پیگیری تا نتیجه</li>
            </ol>
          </div>
        </div>
        <form onsubmit="event.preventDefault();window.open('${wa('سلام، درباره '+p.name+' می‌خواهم مشاوره بگیرم.')}','_blank','noopener')" class="text-center">
          <button class="pill bg-brand-grad text-white hover:opacity-95">📲 شروع گفت‌وگو درباره ${p.name}</button>
        </form>
      </div>`;
  }

