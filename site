  function universityDetail(u){
    return `
      <div class="space-y-5">
        <div class="rounded-2xl overflow-hidden"><img alt="${u.name}" src="${u.img}" class="w-full h-56 object-cover" loading="lazy"></div>
        <div class="text-[12px] text-slate-300">${u.city}</div>
        <p class="text-slate-200">${u.about}</p>
        <div class="glass g-border p-4 rounded-xl">
          <div class="font-bold text-brand mb-2">چه کسانی مناسب این دانشگاه‌اند؟</div>
          <ul class="text-sm text-slate-200 space-y-1">
            <li>• رزومه‌های پژوهشی/پروژه‌محور در ${u.tags.join('، ')}</li>
            <li>• متقاضیان Co-op/Internship و شبکه‌سازی حرفه‌ای</li>
            <li>• افراد منظم در زمان‌بندی اپلای</li>
          </ul>
        </div>
        <div class="glass g-border p-4 rounded-xl">
          <div class="font-bold text-brand mb-2">نکات عملی اپلای</div>
          <ol class="text-sm text-slate-200 list-decimal pr-5 space-y-1">
            <li>انتخاب رشته هم‌راستا با رزومه و هدف شغلی</li>
            <li>برنامه زبان و انگیزه‌نامه قانع‌کننده</li>
            <li>پیگیری منظم مکاتبات</li>
          </ol>
        </div>
        <div class="text-center">
          <a href="${wa('سلام، برای پذیرش '+u.name+' راهنمایی می‌خواهم.')}" target="_blank" rel="noopener" class="pill bg-brand-grad text-white hover:opacity-95">🎓 شروع مشاوره پذیرش ${u.name}</a>
        </div>
      </div>`;
  }

